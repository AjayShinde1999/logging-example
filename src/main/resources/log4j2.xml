<Configuration>
    <Appenders>
       <Console name="Console" target="SYSTEM_OUT">
           <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %level %c %msg %n"/>
       </Console>
        <File name="File" fileName="ajay.log">
            <PatternLayout pattern="%d{yyyy-MM-dd HH:mm:ss} [%t] %level %c %msg %n"/>
        </File>
    </Appenders>

    <Loggers>
        <root level="info">
            <AppenderRef ref = "Console"/>
            <AppenderRef ref = "File"/>
        </root>
    </Loggers>
</Configuration>